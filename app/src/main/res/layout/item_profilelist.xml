<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/photo"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/photo"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@id/id"/>
    <TextView
        android:id="@+id/id"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/photo"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@id/classRoom"
        />
    <TextView
        android:id="@+id/classRoom"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Class"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintLeft_toRightOf="@id/photo"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@id/vote"/>

    <TextView
        android:id="@+id/vote"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Vote Count"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/votetime"
        app:layout_constraintLeft_toRightOf="@id/photo"
        app:layout_constraintTop_toBottomOf="@id/classRoom" />

    <TextView
        android:id="@+id/votetime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Vote Time Status"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/vote"
        app:layout_constraintLeft_toRightOf="@id/photo"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <TextView
        android:id="@+id/PersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/name"
        android:layout_marginLeft="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/name"/>
    <TextView
        android:id="@+id/idNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/PersonName"
        app:layout_constraintLeft_toRightOf="@id/id"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/classRoomNum"
        app:layout_constraintBaseline_toBaselineOf="@id/id"
        />
    <TextView
        android:id="@+id/classRoomNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/idNum"
        app:layout_constraintLeft_toRightOf="@id/classRoom"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/voteNum"
        app:layout_constraintBaseline_toBaselineOf="@id/classRoom"/>

    <TextView
        android:id="@+id/voteNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/votetimeNum"
        app:layout_constraintLeft_toRightOf="@id/vote"
        app:layout_constraintTop_toBottomOf="@id/classRoomNum"
        app:layout_constraintBaseline_toBaselineOf="@id/vote"/>

    <TextView
        android:id="@+id/votetimeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/voteNum"
        app:layout_constraintLeft_toRightOf="@id/votetime"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>